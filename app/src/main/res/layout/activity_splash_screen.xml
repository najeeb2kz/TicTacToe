<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splashScreenLinearLayout"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.chaudhry.najeeb.spanish.FlashActivity">

    <ImageView
        android:id="@+id/splashScreenImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/j_1144x1144"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/splashScreenTicTacToeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tic_tac_toe"
        android:textColor="@color/splash_screen_developer_info_textView"
        android:textStyle="bold"
        android:textSize="40dp"
        android:background="@color/splash_screen_tictactoe_textView"
        android:padding="20dp"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/splashScreenDeveloperInfoTextVeiw"
        android:text="@string/developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/splash_screen_developer_info_textView"
        android:textAppearance="?android:textAppearanceMedium"
        />

</LinearLayout>
