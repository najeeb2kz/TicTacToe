<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#00E5FF"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/playAreaTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/oneButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:text="@string/one"
                android:textSize="50dp"
                android:background="#757575" />

            <Button
                android:id="@+id/twoButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:text="@string/two"
                android:textSize="50dp"
                android:background="#757575"/>

            <Button
                android:id="@+id/threeButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:text="@string/three"
                android:textSize="50dp"
                android:background="#757575"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/fourButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:text="@string/four"
                android:textSize="50dp"
                android:background="#757575"/>

            <Button
                android:id="@+id/fiveButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:text="@string/five"
                android:textSize="50dp"
                android:background="#757575"/>

            <Button
                android:id="@+id/sixButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:text="@string/six"
                android:textSize="50dp"
                android:background="#757575"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/sevenButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:text="@string/seven"
                android:textSize="50dp"
                android:background="#757575"/>

            <Button
                android:id="@+id/eightButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:text="@string/eight"
                android:textSize="50dp"
                android:background="#757575"/>

            <Button
                android:id="@+id/nineButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:text="@string/nine"
                android:textSize="50dp"
                android:background="#757575"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/whoseTurnTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/info"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TableLayout
        android:id="@+id/youTiesAndroidTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/youTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/human"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/youCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tiesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ties"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tiesCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/androidTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/android"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/androidCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>

        </TableRow>
    </TableLayout>
</LinearLayout>
